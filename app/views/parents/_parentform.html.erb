<%= form_for(@parent) do |f| %>
  <fieldset>
    <legend>New Parent Sign-In</legend>
    <% if @parent.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@parent.errors.count, "error") %> prohibited this parent from being saved:</h2>

        <ul>
        <% @parent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="field">
      <%= f.label :parent_first_name %><br>
      <%= f.text_field :parent_first_name %>
    </div>
    <div class="field">
      <%= f.label :parent_last_name %><br>
      <%= f.text_field :parent_last_name %>
    </div>
    <div class="field">
      <%= f.label :home_address %><br>
      <%= f.text_field :home_address %>
    </div>
    <div class="field">
      <%= f.label :zip_code %><br>
      <%= f.text_field :zip_code %>
    </div>
    <div class="actions">
      <%= f.submit :Submit, class: "button" %>
    </div>
  </fieldset>
<% end %>