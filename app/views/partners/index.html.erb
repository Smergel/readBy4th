<html>
<head>
  
</head>

<body>
  <h1 class="alternate divide alternate-divide">Free Library Administrative Page</h1>

  <div class="full-width">
    <ul class="side-nav">
      <li class="center white"><h3>Overall Data</h3></li>
      <li><a href="/partners/absences">Absences</a></li>
      <li><a href="#">Community Outreach</a></li>
      <li><a href="#">Reading Hours</a></li>
      <li><a href="/partners/books_read">Books Read</a></li>
      <li class="divider"></li>
      <li class="center"><h3>Individual Partners</h3></li>
      <li><a href="#">Absentee</a></li>
      <li><a href="#">Community Outreach</a></li>
      <li><a href="#">Reading Hours</a></li>
      <li><a href="#">Books Read</a></li>
    </ul>
  </div>

  <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="large-24 columns">
        <h1>Read by 4th! partners</h1>
      </div>
    </div>
    <div class="row min-height">
      <div class="large-24 columns">
        <table>
          <thead>
            <tr>
              <th>Partner Program</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Website</th>
              <th colspan="1"></th>
              <th>Edit Partner</th>
              <th>Delete Partner</th>
            </tr>
          </thead>

          <tbody>
            <% @partners.each do |partner| %>
              <tr>
                <td><%= link_to partner.name, partner %></td>
                <td><%= link_to partner.email %></td>
                <td><%= partner.phone %></td>
                <td><%= partner.website %></td>
                <td></td>
                <td><%= link_to 'Edit', edit_partner_path(partner) %></td>
                <td><%= link_to 'Delete', partner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Manually Create a New Partner', new_partner_path, class: "button" %><br />
        <%= link_to 'Generate A Report To Print', '/report', class: "button" %>
      </div>
    </div>
</body>
</html>