<%= form_for(@parent) do |f| %>
  <fieldset>
    <legend>New Parent Sign-In</legend>
    <% if @parent.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@parent.errors.count, "error") %> prohibited this parent from being saved:</h2>

        <ul>
        <% @parent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :date_of_birth %><br>
      <%= f.date_select :date_of_birth %>
    </div>
    <div class="field">
      <%= f.label :home_address %><br>
      <%= f.text_field :home_address %>
    </div>
    <div class="field">
      <%= f.label :school %><br>
      <%= f.text_field :school %>
    </div>
    <div class="field">
      <%= f.label :parent_name %><br>
      <%= f.text_field :parent_name %>
    </div>
    <div class="field">
      <%= f.label :student %><br>
      <%= f.check_box :student %>
    </div>
    <div class="actions">
      <%= f.submit :Submit, class: "button" %>
    </div>
  </fieldset>
<% end %>